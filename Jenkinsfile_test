pipeline {
    agent { label "projecta" }
    
    stages {
        stage('Stage1 clone') {
            steps {
                echo 'git clone the repo'
                git 'https://github.com/BHARATH-2131/Helloworld-latest.git'
            }
        }
        stage('Stage2 Build') {
            steps {
                echo 'Build  the project'
                sh 'yum install maven -y'
                sh 'mvn -Dmaven.test.failure.ignore=true clean package'
            }
        }
        stage('Stage3 Deploy') {
            steps {
                echo 'Deploy the project to Tomcat'
                deploy adapters: [tomcat9(alternativeDeploymentContext: '', credentialsId: 'tomcat_admin', path: '', url: 'http://34.226.123.245:8080/')], contextPath: null, war: '**/*.war'
            }
        }
        stage('Stage6 Deploy') {
            steps {
                echo 'Deploy the project to test team 2'
            }
        }
        stage('Stage7 Production') {
            steps {
                echo 'Deploy the project to [production]'
            }
        }        
    }
}
